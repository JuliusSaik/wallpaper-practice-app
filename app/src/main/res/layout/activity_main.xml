<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bttn_item1"
        android:layout_width="156dp"
        android:text="Winter"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:layout_height="224dp"
        android:background="@drawable/item1"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"/>

    <Button
        android:id="@+id/bttn_item2"
        android:layout_width="156dp"
        android:layout_height="224dp"
        android:text="Summer"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:background="@drawable/item2"
        android:layout_marginTop="24dp"
        android:layout_gravity="right"
        android:layout_marginRight="24dp"/>

    <Button
        android:id="@+id/bttn_item3"
        android:layout_width="156dp"
        android:layout_height="224dp"
        android:text="autumn"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:layout_gravity="center_vertical"
        android:background="@drawable/item3"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="24dp"/>

    <Button
        android:id="@+id/bttn_item4"
        android:layout_width="156dp"
        android:layout_height="224dp"
        android:text="spring"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/white"
        android:layout_gravity="center_vertical|right"
        android:background="@drawable/item4"
        android:layout_marginTop="72dp"
        android:layout_marginRight="24dp"/>

</FrameLayout>